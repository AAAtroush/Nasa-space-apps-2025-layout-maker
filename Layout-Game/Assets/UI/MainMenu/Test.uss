.kave-root {
    width: 100%;
    height: 100%;
    background-color: rgb(29, 30, 33);
    justify-content: center;
    align-items: center;
}

.kave-btn {
    position: relative;
    border-width: 1px;
    border-color: rgba(0, 214, 252, 0.3);
    background-color: transparent;
    color: rgba(0, 214, 252, 0.5);
    -unity-font: resource('Fonts/Roboto');
    font-size: 16px;
    letter-spacing: 1.8px;
    width: 200px;
    height: 70px;
    align-items: center;
    justify-content: center;
    transition-property: color;
    transition-duration: 0.25s;
    transition-timing-function: ease-in-out;
}

.line {
    position: absolute;
    background-color: rgb(0, 214, 252);
    transition-property: all;
    transition-duration: 0.25s;
    transition-timing-function: ease-in-out;
}

.top {
    height: 2px;
    width: 60px;
}

.bottom {
    height: 2px;
    width: 60px;
}

.top {
    top: 0;
    left: 10%;
}

.bottom {
    bottom: 0;
    right: 10%;
}

.left {
    width: 2px;
    height: 20px;
}

.right {
    width: 2px;
    height: 20px;
}

.left {
    left: 0;
    top: 30%;
}

.right {
    right: 0;
    bottom: 30%;
}

.kave-btn:hover {
    color: rgb(0, 214, 252);
    text-shadow: 0 0 8px rgba(0, 214, 252, 0.4);
    -unity-background-image-tint-color: rgba(0, 217, 255, 0.3);
    border-color: rgba(0, 186, 219, 0.89);
    background-color: rgba(82, 94, 204, 0.31);
}

.kave-btn:hover .top {
    left: 0;
    width: 20px;
}

.kave-btn:hover .bottom {
    right: 0;
    width: 20px;
}

.kave-btn:hover .left {
    top: 0;
    height: 20px;
}

.kave-btn:hover .right {
    bottom: 0;
    height: 20px;
}

.kave-btn:active {
    color: rgb(0, 214, 252);
    text-shadow: 0 0 8px rgba(0, 214, 252, 0.4);
    -unity-background-image-tint-color: rgba(0, 217, 255, 0.3);
    border-color: rgba(0, 186, 219, 0.89);
    background-color: rgba(0, 0, 0, 0.31);
    -unity-background-scale-mode: scale-and-crop;
}

.kave-btn:active.top {
    left: 50%;
    width: 300px;
}

.kave-btn:active.bottom {
    right: 0;
    width: 20px;
}

.kave-btn:active.left {
    top: 50%;
    height: 50px;
}

.kave-btn:active.right {
    bottom: 0;
    height: 50px;
}
